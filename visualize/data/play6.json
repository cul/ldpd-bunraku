---
layout: null
play_id: 6
---
{% assign play = site.data.plays | where: "pid", page.play_id | first %}
{
  "name": {{ play.label_eng | jsonify }},
  "url": "{{ site.baseurl }}/plays/{{ play.id }}",
  "children": [
    {
      "name": "was written by",
      "children": [
        {% for author_id in play.author_id %}{% assign author = site.data.authors | where: "pid", author_id | first %} {
            "name": {{ author.label_eng | jsonify }},
            "url": "{{ site.baseurl }}/authors/{{ author_id }}"
        }{% unless forloop.last %},{% endunless %}{% endfor %}
      ]
    },
    {
      "name": "was performed during",
      "children": [
        {%for perf_id in play.performance_id %}{% assign performance = site.data.performances | where: "pid", perf_id | first %}{% assign production = site.data.productions | where: "pid", performance.production_id | first %} {
          "name": {{ production.label_eng | jsonify }},
          "url": "{{ site.baseurl }}/performances/{{ perf_id }}",
          "children": [
            {
							"name": "which included the scenes",
							"children": [
                {% for scene_id in performance.scene_id%}{% assign scene = site.data.scenes | where: "pid", scene_id | first %}{% assign last_scene = forloop.last %} {
                  "name": {{ scene.label_eng | jsonify }},
									"url": "{{ site.baseurl }}/scenes/{{ scene_id }}",
									"children": [
                    {% if scene.narrator_id %}{
                      "name": "with narration by",
                      "children": [
                        {% for narrator_id in scene.narrator_id %}{% assign narrator = site.data.performers | where: "pid", narrator_id | first %}{% assign last_narrator = forloop.last %} {
                          "name": {{ narrator.label_eng | jsonify }},
                          "url": "{{ site.baseurl }}/performers/{{ narrator_id }}"
                        }{% unless last_narrator %},{% endunless %}{% endfor %}
                      ]
										}{% if scene.shamisen_id or scene.spuck_id %},{% endif %}{% endif %}
                    {% if scene.shamisen_id %}{
                      "name": "with music by",
                      "children": [
                        {% for shamisen_id in scene.shamisen_id %}{% assign shamisen = site.data.performers | where: "pid", shamisen_id | first %}{% assign last_shamisen = forloop.last %} {
                          "name": {{ shamisen.label_eng | jsonify }},
                          "url": "{{ site.baseurl }}/performers/{{ shamisen_id }}"
                        }{% unless last_shamisen %},{% endunless %}{% endfor %}
                      ]
                    }{% if scene.spuck_id %},{% endif %}{% endif %}
                    {% if scene.spuck_id %}{
                      "name": "with performances by",
                      "children": [
                        {% for spuck_id in scene.spuck_id %}{% assign spuck = site.data.spucks | where: "pid", spuck_id | first %}{% assign last_spuck = forloop.last %}{% assign puppeteer = site.data.performers | where: "pid", spuck.puppeteer_id | first %}{% assign kashira = site.data.kashira | where: "pid", spuck.kashira_id | first %}{% assign character = site.data.characters | where: "pid", spuck.character_id | first %} {
                            "name": {{ puppeteer.label_eng | jsonify }},
                            "url": "{{ site.baseurl }}/performers/{{ spuck.puppeteer_id }}",
                            "children": [
                              {
  															"name": "using the kashira",
  															"children": [
  																{
  																	"name": {{ kashira.label_eng | jsonify }},
  																	"url": "{{ site.baseurl }}kashira/{{ spuck.kashira_id }}"
  																}
  															]
  														},
  														{
  															"name": "playing the character",
  															"children": [
  																{
  																	"name": {{ character.label_eng | jsonify }},
  																	"url": "{{ site.baseurl }}/characters/{{ spuck.character_id }}"
  																}
  															]
  														}
                            ]
                          }{% unless last_spuck %},{% endunless %}
                        {% endfor %}
                      ]
                    }{% endif %}
                  ]
                }{% unless last_scene %},{% endunless %}{% endfor %}
              ]
            }
          ]
        }{% unless forloop.last %},{% endunless %}{% endfor %}
      ]
    }
  ]
}
